@page 
@model ErrorModel

@inject SharedLocalizer L
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Error";
    ViewBag.BodyClass = "pageadvice";
}

<div class="wrapper">
    <div class="page-header">
        <div class="container">
            <div class="d-flex align-content-center flex-wrap h-100">
                <div class="w-100">
                    <div class="col-md-5 col-xs-10 ml-auto mr-auto">
                        <div class="text-center"> <img src="~/assets/img/logo-g-segur.jpg"> </div>
                        <div class="card">
                            <div class="card-header  text-center">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                <h1 class="card-title">Error</h1>
                            </div>
                            <div class="card-body ">
                                <p class="text-center">@L["Error.Message"]</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>